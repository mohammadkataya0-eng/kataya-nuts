  </footer>

  <script>
    // Randomize nut positions, rotation, timing
    (function randomizeNuts() {
      const nuts = document.querySelectorAll('.nut');
      nuts.forEach((nut, idx) => {
        const left = 5 + Math.random() * 90; // 5% to 95%
        const delay = 0.05 + Math.random() * 0.9; // 0.05s to 0.95s
        const dur = 1.0 + Math.random() * 0.6; // ~1.0s to 1.6s (faster)
        const drift = -30 + Math.random() * 60; // -30px to 30px
        const rotStart = -50 + Math.random() * 100; // -50deg to 50deg
        const rotEnd = -50 + Math.random() * 100;
        const scaleBase = nut.classList.contains('pistachio') ? 0.9 : 1.0;
        const scale = scaleBase + Math.random() * 0.35; // varied per type

        nut.style.left = `${left}%`;
        nut.style.animationDelay = `${delay}s`;
        nut.style.setProperty('--dur', `${dur}s`);
        nut.style.setProperty('--drift', `${drift}px`);
        nut.style.setProperty('--rot-start', `${rotStart}deg`);
        nut.style.setProperty('--rot-end', `${rotEnd}deg`);
        nut.style.setProperty('--scale', scale.toFixed(2));
        nut.style.zIndex = 1 + idx; // slight stacking variation
      });
    })();
  </script>

